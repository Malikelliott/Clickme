<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="613">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button1" Content="Click Me" HorizontalAlignment="Center" VerticalAlignment="Center"
                Height="44" Width="88" FontSize="16" Background="#FF4EFF00" Click="Button_Click" Grid.Column="1"/>
        <Label x:Name="txtarea" Grid.Column="1" Content="Hello World" HorizontalAlignment="Center" Margin="0,113,0,0" VerticalAlignment="Top" Height="44" Width="280" FontSize="18" FontWeight="Bold" Grid.RowSpan="2" Background="White"/>
    </Grid>
</Window>
